{
   "compilerOptions": {
      "skipLibCheck": true,
      "lib": [
         "es6"
      ],
      "target": "ES2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "baseUrl": "./",
      "paths": {
         "@/*": [
            "src/*"
         ]
      }
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "**/**/node_modules",
      "**/*.spec.ts",
      "**/*.test.ts",
      "build"
   ]
}
